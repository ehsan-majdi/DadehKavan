@{
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}
<div>
    <h4 class="text-right">گالری تصویر محصول</h4>
    <hr />
    <div class="row">
        <div class="col-lg-12">

            @foreach (var item in ViewBag.gallery)
            {
                <div class="col-lg-3 col-xs-12">
                    <img src="@Url.Content("~/image/" + item.FileName)" alt="@item.FileName" height="250" width="250" style="margin:5px" />
                </div>
            }
        </div>
    </div>
</div>



