
@{
    ViewBag.Title = "Create";
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}
<style>
    label {
        display: block;
        text-align: right;
    }

    h3 {
        text-align: right
    }
</style>
<div class="container">
    @using (Html.BeginForm("Create", "ProductGroup", FormMethod.Post))
    {
        <h3>گروه بندی محصول</h3>
        <hr />
        <div class="col-md-4 col-lg-offset-4">
            <div class="form-group">
                <label>عنوان</label>
                <input name="GroupName" class="form-control" type="text" placeholder="عنوان" />
            </div>
        </div>
        <div class="col-md-4 col-lg-offset-4">
            <button type="submit" class="btn btn-success">ذخیره</button>
        </div>
    }
</div>

